<h1>OUR UNITS</h1>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-info">Back To Home</a>

<table class="table  table-striped table-bordered table-hover">
    <thead>
        <tr class="bg-primary text-white">

            <th>
                @Html.DisplayNameFor(model => model.guestNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PathRoomNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aminities)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Area)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.guestNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PathRoomNum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aminities.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Id)
                </td>
                <td>
                    <a asp-action="UnitsEdit" asp-route-id="@item.ID" class="btn btn-warning">Edit</a> |
                    <a asp-action="UnitsDetails" asp-route-id="@item.ID" class="btn btn-info">Details</a> |
                    <a asp-action="UnitsDelete" asp-route-id="@item.ID" class="btn btn-danger">Delete</a>|
                </td>
            </tr>
        }
    </tbody>
</table>


