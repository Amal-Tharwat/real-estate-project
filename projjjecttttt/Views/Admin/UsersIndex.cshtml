@model IEnumerable<User>
@{
    Layout = "_Layout";
}



<pre>





</pre>



<h1>Users</h1>



<table class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
            <th>Id</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Age</th>
            <th>roles</th>
            <th>actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FullName</td>
                <td>@item.Email</td>
                <td>@item.Age</td>

                <td>@string.Join(",",item.Roles.ToList())</td>
                <td><a class="btn btn-primary" asp-controller="Admin" asp-action="ManageRoles" asp-route-User="@item.Id">Manage Roles</a></td>
            </tr>
        }
    </tbody>
</table>

