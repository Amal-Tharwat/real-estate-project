@page
@model LoginModel

@{
    ViewData["Title"] = "";
    Layout = "_Layout2";
}
<body class="ss">
    <pre>




    </pre>
<h1>@ViewData["Title"]</h1>
    <div class="container ">
        <div class="row  align-items-center logincta ">
            <div class="col-md-6   tittle-of-section">
                <h2>Login</h2>
                <h6>Login</h6>
                <div class="line"></div>
            </div>

            <div class="col-md-6 row  border border-info rounded-3 mt-5  py-2 bg-white shadow-lg loginform">
               
        <section class=" row">
                    
                    <form class="  row g-1" id="account" method="post">
                 @*       <h2 style="color:#00c3da" class="dd">Use your account to login....</h2>
                <hr />*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-10">
                        <label asp-for="Input.Email" class="form-label"></label>
                            <input style=" background-color: rgb(0 0 0 / 10%)" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="col-10">
                     <label asp-for="Input.Password" class="form-label"></label>
                     <input style=" background-color: rgb(0 0 0 / 10%)" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div >
                            <button id="login-submit" type="submit" class="btn btn-color">Log In</button>
                    
                </div>
                <div>
                    <p>
                                <a style="color:#00c3da" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                          
                            <p>
                                <a style="color:#00c3da" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                 
                </div>
            </form>
        </section>
    </div>
   </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
