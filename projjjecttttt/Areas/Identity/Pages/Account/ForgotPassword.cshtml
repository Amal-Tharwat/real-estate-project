@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "";
}
<pre>







</pre>
<h1>@ViewData["Title"]</h1>


<div class="container ">
    <div class="row  align-items-center ">

        <div class="col-md-6   tittle-of-section">
            <h2>Password</h2>
            <h6>Forgot your password?</h6>
            <div class="line"></div>
        </div>

        <div class="col-md-6  row  border border-info rounded-3 mt-5  py-2 bg-white">
            <form class="row g-1" method="post">
@*                <h2 class="dd">Forgot your password?</h2>
*@                <h3  style="color:#00c3da"  class="dd">Enter your email...</h3>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10">
                    <label asp-for="Input.Email" class="form-label"></label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
               
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-color">Reset Password</button>
                </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
