@page
@model EmailModel
@{
    ViewData["Title"] = "";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container ">
    <div class="row  align-items-center ">
        <div class=" row  border border-info rounded-3 mt-2 col-6 offset-md-3 py-2 bg-white">
        <form class="row g-1"id="email-form" method="post">
                <h2 style="color:#00c3da " class="dd">Manage Email</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            @if (Model.IsEmailConfirmed)
            {
                <div class="col-1 input-group">
                        <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                        <div class="input-group-append">
                            <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                        </div>
                    
                </div>
            }
            else
            {
                <div class="col-10">
                        <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                    
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" style="color:#00c3da " class="btn btn-link">Send verification email</button>
                </div>
            }
            <div class="col-10">
                    <label asp-for="Input.NewEmail" class="form-label"></label>
                <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
               
                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
            </div>
            <div>
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-color">Change email</button>
                </div>
        </form>

    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
