@page
@model PersonalDataModel
@{
    ViewData["Title"] = "";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
<h3>@ViewData["Title"]</h3>


       
<div class="container ">
    <div class="row  align-items-center ">
        <div class=" row  border border-info rounded-3 mt-2 col-6 offset-md-3 py-2 bg-white">
            <h2 style="color:#00c3da " class="dd">Personal Data</h2>
             <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong class="text-danger">Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form class="row g-1"id="download-data" asp-page="DownloadPersonalData" method="post">
               
            <!---<button class="btn btn-primary" type="submit">Download</button>-->
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </form>
        <br/>
       <!-- <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </p>-->
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
