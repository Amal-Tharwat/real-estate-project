@page
@model IndexModel
@{
    ViewData["Title"] = "";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container ">
    <div class="row  align-items-center ">
        <div class=" row  border border-info rounded-3 mt-2 col-6 offset-md-3 py-2 bg-white">
        <form class="row g-1" id="profile-form" method="post">
                <h2  style="color:#00c3da !important" class="dd">Profile</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-10">
                    <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" disabled />
               
            </div>
            <div class="col-10">
                    <label asp-for="Input.FullName" class="form-label"></label>
                <input asp-for="Input.FullName" class="form-control" />
               
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
                <div class="col-10">
                    <label asp-for="Input.Age" class="form-label"></label>
                    <input asp-for="Input.Age" class="form-control" />

                    <span asp-validation-for="Input.Age" class="text-danger"></span>
                </div>
                <div class="col-10">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />

                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            <div>
            <button id="update-profile-button" class="btn btn-color">Save</button>
                </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
